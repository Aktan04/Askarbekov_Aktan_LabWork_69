@model Dish

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Добавить блюдо</h1>

<form asp-action="CreateDish" method="post">
    @Html.ValidationSummary(true)
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Establishment" class="control-label">Заведение</label>
        <input disabled type="text" value="@Model.Establishment.Name" class="form-control">
        <input asp-for="EstablishmentId" type="hidden" value="@Model.Establishment.Id">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Добавить блюдо</button>
    </div>
</form>

<div>
    <a asp-action="Details" asp-route-id="@Model.EstablishmentId">Вернуться к заведению</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}